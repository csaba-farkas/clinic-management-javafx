<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<StackPane maxWidth="1200.0" minHeight="600.0" minWidth="600.0" stylesheets="@metro/metrostyle/Metro-UI.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.clinigment.application.controller.AppointmentTableSceneController">
   <children>
      <TableView fx:id="tableView">
              <columns>
                  <TableColumn fx:id="colAction" prefWidth="200.0" resizable="false" text="ACTION">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="30.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@metro/img/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
                  </TableColumn>
                  <TableColumn fx:id="colStartTime" prefWidth="200.0" text="START TIME">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="30.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@metro/img/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
                  </TableColumn>
                  <TableColumn fx:id="colEndTime" prefWidth="200.0" text="END TIME">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="30.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@metro/img/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
                  </TableColumn>
                  <TableColumn fx:id="colPatientName" minWidth="20.0" prefWidth="300.0" text="PATIENT NAME">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="30.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@metro/img/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
                  </TableColumn>
                  <TableColumn fx:id="colContactNumber" prefWidth="200.0" text="CONTACT NUMBER">
               <graphic>
                  <ImageView fitHeight="28.0" fitWidth="30.0" opacity="0.6" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@metro/img/hash.png" />
                     </image>
                  </ImageView>
               </graphic>
                  </TableColumn>
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
         <StackPane.margin>
            <Insets left="15.0" right="15.0" top="100.0" />
         </StackPane.margin>
            </TableView>
      <Text fx:id="mainLabel" fill="#2b579a" strokeType="OUTSIDE" strokeWidth="0.0" text="Calendar" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets left="15.0" top="15.0" />
         </StackPane.margin>
         <font>
            <Font name="Segoe UI" size="48.0" />
         </font>
      </Text>
      <Separator prefWidth="200.0" StackPane.alignment="TOP_CENTER">
         <StackPane.margin>
            <Insets left="15.0" right="15.0" top="80.0" />
         </StackPane.margin>
      </Separator>
      <DatePicker fx:id="datePicker" editable="false" promptText="Select Date..." StackPane.alignment="TOP_RIGHT">
         <StackPane.margin>
            <Insets right="10.0" top="30.0" />
         </StackPane.margin>
      </DatePicker>
      <ComboBox fx:id="employeeCombo" prefHeight="35.0" prefWidth="250.0" promptText="Select Doctor/Hygienist" StackPane.alignment="TOP_RIGHT">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <StackPane.margin>
            <Insets right="250.0" top="30.0" />
         </StackPane.margin>
      </ComboBox>
   </children>
</StackPane>
